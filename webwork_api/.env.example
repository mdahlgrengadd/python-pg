# WebWork Python API - Environment Configuration Example
# Copy this file to .env and customize for your environment

# Application
APP_NAME="WebWork Python API"
APP_VERSION="2.0.0"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# API
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# Database (optional - leave empty to use file system only)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/webwork
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_ENABLED=false

# Security
SECRET_KEY=change-me-in-production-use-secrets-token-urlsafe-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=text  # text or json
# LOG_FILE=logs/webwork.log  # Optional file logging

# Problem Storage
PROBLEMS_DIR=problems
ALLOW_PROBLEM_UPLOAD=false

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn
ENABLE_METRICS=true
